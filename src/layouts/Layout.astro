---
import "./globals.css";
import ViewTransitions from "astro/components/ViewTransitions.astro";
import Footer from "@components/Footer/Footer.astro";
import { urlBase } from "@lib/constants";
import SidebarText from "@components/SidebarText/SidebarTextContainer.astro";

interface Props {
  title: string;
  footer?: boolean;
  sidebar?: boolean;
}

const { title, footer = true, sidebar = true } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href=`/${urlBase}/favicon.ico` />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="flex">
      <!-- {sidebar && <SidebarText text="ELIAS PETTERSEN CHAIRI" animationSpeed={100}/>} -->
      <div class="flex-grow">
        <main class="p-4">
          <slot />
        </main>
        {footer && <Footer />}
      </div>
    </div>
  </body>
</html>
